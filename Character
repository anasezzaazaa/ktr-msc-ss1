public class Character {
 String name;
 String RPGClass;
 int life=50;
 int agility=2;
 int strength=2;
 int wit=2;  
 Character(String firstParameter, String secondParameter){
  name=firstParameter;
  RPGClass=secondParameter;
  }
 public static void attack(){ 
     System.out.println(name+": Rrrrrrrrr....");}
 public static void moveRight(){
  System.out.println("moves right")};
 public static void moveLeft(){
  System.out.println("moves left")};
 public static void moveBack(){
  System.out.println("moves back")};
 public static void moveForward(){
  System.out.println("moves forward")};
 public static void unsheathe(){
  System.out.println(name+"unsheathes his weapon.")};
}
