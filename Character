public class Character {
 String name;
 String RPGClass;
 int life=50;
 int agility=2;
 int strength=2;
 int wit=2;  
 Character(String firstParameter, String secondParameter){
  name=firstParameter;
  RPGClass=secondParameter;
  }
 public static void attack(){ 
     System.out.println(name+": Rrrrrrrrr....");}
 
}
public class Warrior{
 String name;
 String RPGClass="Warrior";
 int life=100;
 int agility=10;
 int strength=8;
 int wit=3;
 Warrior(){
  System.out.println(name+": My name will go down in history!");
  }
 public static void attack(String weapon){ 
  if weapon="hammer" or weapon="sword"{
   System.out.println(name+": Rrrrrrrrr....");
   System.out.println("I'll crush you with my "+weapon+"!");
}
}
public class Mage{
 String name;
 String RPGClass="Mage";
 int life=70;
 int agility=3;
 int strength=10;
 int wit=10;
 Mage(){
  System.out.println(name+": May the gods be with me.")
  }
 public static  void attack(String weapon){ 
  if weapon="magic" or weapon="wand"{
   System.out.println(name+": Rrrrrrrrr....");
   System.out.println("I'll crush you with my "+weapon+"!")
}
}
